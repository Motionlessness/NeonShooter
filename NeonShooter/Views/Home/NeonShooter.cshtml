<script src="~/js/miniGame.js"></script>
<style>
    * {
        -moz-user-select: none;
        user-select: none;
    }

    #miniGame {
        cursor: none;
        position: absolute;
        top: 0;
        left: 0;
    }

    .modal {
        color: orangered;
        display: none;
        position: absolute;
        z-index: 1;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgb(0, 0, 0);
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        color: forestgreen;
        background-color: rgba(0, 0, 0, 0.8);
        margin: 15% auto;
        padding: 5rem;
        border: 1px solid rgba(66,0,150,1);
        width: 80%;
    }

    .modal-content p {
        color: orangered;
    }

    .modal-content b {
        color: lawngreen;
    }

    .close {
        color: orangered;
        position: absolute;
        right: 0;
        top: 0;
        font-size: 15rem;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: aqua;
        text-decoration: none;
        cursor: pointer;
    }

    #retrySpan {
        color: lawngreen;
        position: absolute;
        right: 1%;
        bottom: 0;
        font-size: 5rem;
    }

    #retrySpan:hover,
    #retrySpan:focus {
        color: azure;
        text-decoration: none;
        cursor: pointer;
    }

    .nav {
        overflow: hidden;
        position: absolute;
        top: 1%;
        right: 5%;
    }

    .nav #pageLinks {
        display: none;
    }

    .nav a.icon {
        display: block;
    }

    .nav a {
        font-size: 2em;
        display: inline-block;
        font-family: Impact;
        background: none;
        color: rgba(50,50,50,1);
        border: solid;
        border-radius: 1em;
        outline: none;
        position: relative;
        filter: url('#liquid');
    }

    .nav a::before {
        content: '';
        background: radial-gradient( rgba(0, 255, 255, .85)50%, rgba(0,255,0,.85));
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .nav a:hover {
        animation: wiggle .5s;
    }

    .nav a:hover::before {
        background: radial-gradient( rgba(66, 0, 255, .85)50%, rgba(210,110,210,.85));
        filter: url('#wave');
    }

    .footer {
        display: none;
    }

    .off {
        color: rgba(255, 0, 255, 1);
    }

    .def {
        color: rgba(0, 255, 0, 1);
    }
</style>